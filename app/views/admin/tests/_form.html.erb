<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :test_title %>
  </p>
  <p>
    <%= form.label :level %>
    <%= form.number_field :level, id: :test_title %>
  </p>
  <p>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>
  <p>
    <%= form.label :timer %>
    <%= form.number_field :timer, id: :test_title %>
  </p>
  <p><%= form.submit %></p>
<% end %>

<p>
  <%= link_to t('.back_to_tests'), admin_tests_path%>
</p>
