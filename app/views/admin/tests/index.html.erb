<% if @tests.present? %>
  <%= render 'shared/errors', resource: @test %>
  <table class="table table-hover">
    <tr>
      <th scope="col" style="text-align: center"><%= t('.title') %></th>
      <th scope="col" style="text-align: center"><%= t('.level') %></th>
      <th scope="col" style="text-align: center"><%= t('.questions_count') %></th>
      <th scope="col" style="text-align: center"><%= t('.timer') %></th>
      <th scope="col" style="text-align: center" colspan="3"><%= t('.actions') %></th>
    </tr>
    <%= render @tests %>
  </table>
<% else %>
  <h1><%= t('.no_tests') %></h1>
<% end %>
<p>
  <%= link_to t('.add_new'), new_admin_test_path %>
</p>
