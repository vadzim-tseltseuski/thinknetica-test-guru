<div class="card border-primary">
  <div class="card-body">
    <%= form_with model: [:admin, @badge], local: true do |form| %>
      <%= render 'shared/errors', resource: @badge %>

      <div class="form-group">
        <p class="form-field is-required">
          <%= form.label :title %>
          <%= form.text_area :title %>
        </p><br>

        <p class="form-field is-required">
          <%= form.label :image_url %>
          <%= form.text_field :image_url%>
        </p>

        <p class="form-field is-required">
          <%= form.label :badge_rule_id %>

          <%= form.collection_select :badge_rule_id, BadgeRule.all, :id, :rule_type, prompt: true %>
        </p><br>


        <p><%= form.submit class: "btn btn-primary mt-3" %></p>
      </div>
    <% end %>
  </div>
</div>
