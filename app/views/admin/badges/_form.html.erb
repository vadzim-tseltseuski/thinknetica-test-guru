<div class="card border-primary">
  <div class="card-body">
    <%= form_with model: [:admin, @badge], local: true do |form| %>
      <%= render 'shared/errors', resource: @badge %>

      <div class="form-group">
        <p class="form-field is-required">
          <%= form.label :title %>
          <%= form.text_area :title %>
        </p><br>

        <p class="form-field is-required">
          <%= form.label :image_url %>
          <%= form.text_field :image_url%>
        </p>

        <p class="form-field is-required">
          <%= form.label :rule %>
          <%= form.collection_select :rule, Badge::RULE, :to_s, :to_s, prompt: true %>
        </p><br>

        <p class="form-field">
          <%= form.label :rule_option %>
          <%= form.text_field :rule_option%>
        </p>

        <p><%= form.submit class: "btn btn-primary mt-3" %></p>
      </div>
    <% end %>
  </div>
</div>
