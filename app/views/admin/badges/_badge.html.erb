<tr>
    <td class="align-middle"><%= badge.title %></td>
    <td class="w-25"><img class="img-fluid img-thumbnail" src="<%=  badge.image_url.html_safe %>"></td>
    <td class="align-middle"><%= badge.rule_type %></td>
    <td class="align-middle">
    <%= link_to t('.show'), admin_badge_path(badge), class: "btn btn-primary", display: 'inline-block' %>
    <%= link_to t('.edit'),
                edit_admin_badge_path(badge),
                class: "btn btn-primary", display: 'inline-block' %>
    <%= link_to t('.delete'), admin_badge_path(badge), class: "btn btn-primary",
                method: :delete,
                data: { confirm: t('.delete_confirmation') },
                display: 'inline-block' %>
  </td>
</tr>
