<h1>Passing the <%= @test_passage.test.title %> test</h1>

<div class="progress">
  <%= tag.div class: 'progress-bar progress-bar-striped progress-bar-animated',
              role: 'progressbar',
              data: { current_number: @test_passage.current_question_number,
                      total: @test_passage.test.questions.count } %>
</div>

<b>
  <%= @test_passage.current_question.body %>
</b>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
    <div style="display:flex; flex-direction: row;">
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </div>
  <% end %>
  <p><%= link_to 'Gist this question', gists_path(test_passage_id: @test_passage.id), method: :post %></p>

  <p><%= form.submit 'Next' %></p>
<% end %>
